pipeline {
    agent any

    tools {
        maven 'Maven_3.9.9' // Name of the Maven installation in Jenkins
    }

    environment {
        DOCKER_IMAGE = 'roufaida1/calculator:latest'
        DOCKER_USERNAME = 'roufaida1'
        DOCKER_PASSWORD = 'Roufaidaroufaida@2020'
    }

    stages {
        stage('Build') {
            steps {
                script {
                    echo 'Starting build process...'
                    sh 'mvn clean package' // Use `sh` for Unix or `bat` for Windows
                }
            }
        }
        stage('Unit Tests') {
            steps {
                script {
                    echo 'Running unit tests...'
                    sh 'mvn test'
                }
            }
        }
        stage('Build Docker Image') {
            steps {
                script {
                    echo 'Building Docker image...'
                    sh "docker build -t ${DOCKER_IMAGE} ."
                }
            }
        }
        stage('Push Docker Image to DockerHub') {
            steps {
                script {
                    echo 'Logging in to DockerHub...'
                    sh "echo ${DOCKER_PASSWORD} | docker login -u ${DOCKER_USERNAME} --password-stdin"
                    echo 'Pushing Docker image to DockerHub...'
                    sh "docker push ${DOCKER_IMAGE}"
                }
            }
        }
    }

    post {
        success {
            echo 'Pipeline completed successfully.'
        }
        failure {
            echo 'The pipeline failed.'
        }
    }
}
